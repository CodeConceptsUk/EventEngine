<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
    <connectionStrings>
        <add name="Snapshots" connectionString="Data Source=localhost;Initial Catalog=PolicyAdminDemoDB;Integrated Security=True" providerName="System.Data.SqlClient" />
        <add name="IsaPolicyEventStore" connectionString="Data Source=SQL01;Initial Catalog=PolicyAdminDemoDB;Integrated Security=True" providerName="System.Data.SqlClient" />
        <add name="Sequencing" connectionString="Data Source=SQL01;Initial Catalog=PolicyAdminDemoDB;Integrated Security=True" providerName="System.Data.SqlClient" />
    </connectionStrings>
    <log4net>
        <appender name="DefaultAppender" type="log4net.Appender.ManagedColoredConsoleAppender">
          <mapping>
            <level value="ERROR" />
            <foreColor value="DarkRed" />
          </mapping>
          <mapping>
            <level value="WARN" />
            <foreColor value="Yellow" />
          </mapping>
          <mapping>
            <level value="INFO" />
            <foreColor value="White" />
          </mapping>
          <mapping>
            <level value="DEBUG" />
            <foreColor value="Gray" />
          </mapping>
          <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%-5level %-20logger - %message%newline" />
            <!-- 
            <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
            -->
          </layout>
        </appender>
        <root>
            <level value="ALL" />
            <appender-ref ref="DefaultAppender" />
        </root>
    </log4net>
</configuration>